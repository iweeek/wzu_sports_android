<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <!---->
        <!--<ProgressBar-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:indeterminateDrawable="@drawable/progressbar_gray_rotate" />-->
        <!---->


        <com.application.library.widget.ProgressBarCircular
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:matProg_barColor="@color/progressbar_load_color"
            app:matProg_barWidth="@dimen/progress_border_width"
            app:matProg_circleRadius="@dimen/progress_def_radius"
            app:matProg_progressIndeterminate="true"/>
        <!--<ImageView-->
        <!--android:id="@+id/iv_loading"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/loading_black_anim" />-->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/def_data_loading"
            android:textColor="@color/black_50"
            android:textSize="15sp"/>

        <View
            android:id="@+id/loading_temp_view"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>