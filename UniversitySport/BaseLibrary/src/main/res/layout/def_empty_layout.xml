<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/icon_default_network" />

        <TextView
            android:id="@+id/tv_null_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@string/def_empty_data_text"
            android:textColor="@color/black_60"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_null"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_btn_retry_selector"
            android:text="@string/def_empty_button_retry"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <View
            android:id="@+id/empty_temp_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>