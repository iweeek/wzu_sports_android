<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:test="http://schemas.android.com/apk/res-auto"
                xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"/>

    <RelativeLayout
        android:id="@+id/rlAnimView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llFloatingWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rlTopFloatingWindow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tvAreaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="温州大学南校区体育馆"
                    android:textColor="@color/black_60"
                    android:textSize="16dp"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvSelectLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/llRightTitle"
                        android:text="地点调整 > "
                        android:textColor="@color/blue"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#00CC00"
                        android:textSize="14dp"
                        android:visibility="gone"
                        tool:text="达标"/>
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorLine"/>

            <RelativeLayout
                android:id="@+id/rlAreaDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                >

                <TextView
                    android:id="@+id/tvAreaDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南校区体育馆提供篮球和羽毛球两种场地，供同学们进行运动。"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorLine"/>

            <RelativeLayout
                android:id="@+id/rlElapsedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="耗时"
                        android:textColor="@color/black_60"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tvElapsedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/digitalPlaceholder"
                        android:textColor="#868892"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tool:text="00:00:10"/>

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlBottomFloatingWindow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="达标时间："
                        android:textColor="@color/black_60"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tvTargetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minutePlaceHolder"
                        android:textColor="@color/black_60"
                        android:textSize="14dp"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvParticipantNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/llRightTitle"
                        android:text="20人正在参加"
                        android:textColor="@color/black_60"
                        android:textSize="12dp"/>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--<LinearLayout-->
        <!--android:id="@+id/llLocationHint"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center">-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/black_4"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="正在定位中..."-->
            <!--android:textSize="16dp"/>-->
    <!--</LinearLayout>-->

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc66A6FE"
            android:gravity="center"
            android:text="开始运动"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btContinue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cc66A6FE"
                android:gravity="center"
                android:text="继续"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btStop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CCFF0000"
                android:gravity="center"
                android:text="结束"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_location"/>


    <com.tim.app.ui.view.SlideUnlockView
        android:id="@+id/slideUnlockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:visibility="gone"
        test:slideUnlockBackgroundResource="@drawable/ic_lock_bg"
        test:slideUnlockBlockResource="@drawable/ic_lock"
        tool:visibility="visible"/>

    <TextView
        android:id="@+id/tvPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="滑动停止"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:visibility="gone"/>

</RelativeLayout>
